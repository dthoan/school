@model fifness.Models.USER

@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>ForgotPassword</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
